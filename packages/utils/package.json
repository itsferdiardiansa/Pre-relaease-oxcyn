{
  "private": true,
  "name": "@oxcyn/utils",
  "version": "1.0.0",
  "description": "A utilities for Oxcyn",
  "main": "dist/index.js",
  "source": "src/index.ts",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prebuild": "pnpm clear && rimraf dist",
    "build": "tsc",
    "dev": "ts-node-dev --respawn --watch --cls --files src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch --verbose=false",
    "lint": "eslint . --ext .ts",
    "lint:fix": "pnpm run lint --fix"
  },
  "keywords": [
    "oxcyn",
    "utilities",
    "typescript"
  ],
  "author": {
    "email": "ferdiardiansa@gmail.com",
    "name": "Ferdi Ardiansa",
    "url": "https://github.com/itsferdiardiansa"
  },
  "license": "ISC",
  "dependencies": {
    "@oxcyn/ts-config": "workspace:^",
    "clsx": "^2.1.0",
    "tailwind-merge": "^2.2.0",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.23.8",
    "@babel/preset-typescript": "^7.23.3",
    "@oxcyn/eslint-config": "workspace:^",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "ts-node-dev": "^2.0.0"
  }
}
